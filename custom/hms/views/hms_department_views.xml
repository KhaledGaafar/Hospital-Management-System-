<odoo>
  <data>

    <!-- List View -->
    <record id="hms_department_view_list" model="ir.ui.view">
      <field name="name">hms.department.list</field>
      <field name="model">hms.department</field>
      <field name="type">list</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="description"/>
          <field name="capacity"/>
          <field name="is_open"/>
        </list>
      </field>
    </record>

    <!-- Form View -->
    <record id="hms_department_view_form" model="ir.ui.view">
      <field name="name">hms.department.form</field>
      <field name="model">hms.department</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Department Form">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="description"/>
                <field name="capacity"/>
                <field name="is_open"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>